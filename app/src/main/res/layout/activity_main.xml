<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/upperTextRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/consolesRadioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="100">
    <TextView
        android:id="@+id/deskTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deskUpperText"
        android:textSize="20sp"
        android:layout_weight="50"/>
    <TextView
        android:id="@+id/channelsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channelsUpperText"
        android:textSize="20sp"
        android:layout_weight="50"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/consolesRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="120"
        app:layout_constraintBottom_toTopOf="@+id/bandGroupsListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperTextRow"
        tools:ignore="UsingOnClickInXml">

        <RadioButton
            android:id="@+id/genericDeskRadiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onRadioButtonClicked"
            android:background="@drawable/view_style"
            android:text="@string/console_type_generic" />

        <RadioButton
            android:id="@+id/yamahaPm5dRadiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onRadioButtonClicked"
            android:background="@drawable/view_style"
            android:text="@string/console_type_pm5d" />

        <RadioButton
            android:id="@+id/x32Radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:onClick="onRadioButtonClicked"
            android:background="@drawable/view_style"
            android:text="@string/console_type_x32" />

    </RadioGroup>

    <ListView
        android:id="@+id/bandGroupsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nextStepButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consolesRadioGroup"
        android:entries="@array/bandGroupsList"/>

    <Button
        android:id="@+id/nextStepButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="nextStep"
        android:text="@string/button_next"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandGroupsListView"
        tools:ignore="UsingOnClickInXml" />


</androidx.constraintlayout.widget.ConstraintLayout>